{% extends 'base.html.twig' %}

{% block title %}Add{% endblock %}

{% block body %}


    {{ form_start(form) }}
    <div class="row">

        <div class="form-group col-12 justify-content-center" >
            <div class="row">
                <img src="{{asset("../image/search.png")}}"  alt="search">
                <div class="col-11">

                    {{ form_widget(form.name, {'attr': {'class': 'form-control dark' }}) }}
                    <small class="text-danger">{{ form_errors(form.name) }}</small>
                </div>
            </div>
        </div>
        <div class="form-group col-12 justify-content-center" >
            <div class="row">
                <img src="{{asset("../image/piece.png")}}"  alt="piece">
                <div class="col-11">
                    {{ form_widget(form.quantity, {'attr': {'class': 'form-control dark' }}) }}
                    <small class="text-danger">{{ form_errors(form.quantity) }}</small>
                </div>
            </div>
        </div>
        <div class="form-group col-12 justify-content-center" >
            <div class="row">
                <img src="{{asset("../image/euro.png")}}"  alt="euro">
                <div class="col-11 ">
                    {{ form_widget(form.price, {'attr': {'class': 'form-control dark ' }}) }}
                    <small class="text-danger ">{{ form_errors(form.price) }}</small>
                </div>
            </div>
        </div>

    </div>
    <div class="row justify-content-center" >
        <div class="col-1 ">
            <button  type="submit" class="btn " style="background-color: rgb(88,87,87); color: rgb(16,15,15)" onclick="if (confirm('Es-tu certain de vouloir ACHETER ?')) commentDelete(1); return false">AJOUTER</button>

        </div>
    </div>



    {{ form_end(form) }}
{% endblock %}
